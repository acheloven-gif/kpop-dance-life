{
  "name": "kcd-telegram-bot",
  "version": "1.0.0",
  "description": "K-Cover Dance Life Telegram Bot with Web App integration",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "npm run build:game && tsc",
    "build:game": "cd ../game && npm install && npm run build && cd ../bot",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "telegraf": "^4.15.0",
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "tsx": "^4.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
